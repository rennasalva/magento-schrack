?>
<?php if ($_products = $this->getRecentlyViewedProducts()): ?>
	<div class="block block-viewed">
	    <h2><span><?php echo $this->__('Recently Viewed Products') ?></span></h2>
	    <div class="block-content">
	        <ol id="recently-viewed-items">
				<?php foreach ($_products as $_item): ?>
					<?php
					$_categories = $_item->getCategoryIds();
					$_category = Mage::getModel('catalog/category')->load($_categories[0]);
					$url = $this->getUrl(dirname($_category->getUrlPath()).'/'.basename($_category->getUrlPath(), '.html').'/'.basename($_item->getProductUrl(false)));
					?>
					<li class="item">
		                <p class="product-name"><a href="<?php echo $url /* $this->getProductUrl($_item) */ ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></p>
		            </li>
	<?php endforeach; ?>
	        </ol>
	        <script type="text/javascript">//<![CDATA[
	        decorateList('recently-viewed-items');
	        //]]></script>
	    </div>
	</div>
<?php endif; ?>
