<?php
/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php $_coll = $this->getCollection(); if( $_coll && $_coll->getSize() ): ?>
<div class="large-12 columns">
    <?php if(true || $this->getUseContainer()): ?>
    <div class="row pager-standard">
    <?php endif ?>

    <?php if(true || $this->getShowAmounts()): ?>
            <div class="amount large-4 columns"><div>
        <?php if ($this->getRequest()->getControllerName() === 'account' && $this->getRequest()->getActionName() !== 'documentsDetailView'): ?>
            <?php if($this->getLastPageNum()>1): ?>
                <?php echo $this->__('Documents %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
            <?php else: ?>
                <strong><?php echo $this->__('%s Document(s)', $this->getTotalNum()) ?></strong>
            <?php endif; ?>
        <?php else: ?>
            <?php if($this->getLastPageNum()>1): ?>
                <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
            <?php else: ?>
                <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
            <?php endif; ?>
        <?php endif; ?>
    </div></div>
    <?php endif ?>

    <?php if($this->getLastPageNum()>1): ?>
        <div class="pages large-4 columns"><div>
        <!--<div class="label"><?php echo $this->__('Page:') ?></div>-->
        <ol>
        <?php if (!$this->isFirstPage()):?>
            <?php if ($this->getFrameStart() > 1):?>
                <li>
                    <a class="first" href="<?php echo $this->getFirstPageUrl() ?>" title="<?php echo $this->__('First') ?>">
                        <img src="<?php echo $this->getSkinUrl('schrackdesign/Public/Images/pager/first.png') ?>" alt="<?php echo $this->__('First') ?>" class="v-middle" />
                    </a>
                </li>
            <?php endif;?>
            <li>
                <a class="previous" href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>">
                    <?php if(!$this->getAnchorTextForPrevious()): ?>
                        <img src="<?php echo $this->getSkinUrl('schrackdesign/Public/Images/pager/prev.png') ?>" alt="<?php echo $this->__('Previous') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForPrevious() ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>

        <?php if ($this->canShowFirst()): ?>
            <li><a class="first" href="<?php echo $this->getFirstPageUrl() ?>">1</a></li>
        <?php endif;?>

        <?php if ($this->canShowPreviousJump()): ?>
            <li><a class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></li>
        <?php endif;?>

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <li class="current"><?php echo $_page ?></li>
            <?php else: ?>
                <li><a href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a></li>
            <?php endif;?>
        <?php endforeach;?>


        <?php if ($this->canShowNextJump()): ?>
            <li><a class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a></li>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <li><a class="last" href="<?php echo $this->getLastPageUrl() ?>"><?php echo $this->getLastPageNum() ?></a><li>
        <?php endif;?>

        <?php if (!$this->isLastPage()): ?>            
            <li>
                <a class="next" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">
                    <?php if(!$this->getAnchorTextForNext()): ?>
                        <img src="<?php echo $this->getSkinUrl('schrackdesign/Public/Images/pager/next.png') ?>" alt="<?php echo $this->__('Next') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForNext() ?>
                    <?php endif;?>
                </a>
            </li>
            <?php if ($this->getFrameEnd() < $this->getLastPageNum()):?>
                <li>
                    <a class="last" href="<?php echo $this->getLastPageUrl() ?>" title="<?php echo $this->__('Last') ?>">
                        <img src="<?php echo $this->getSkinUrl('schrackdesign/Public/Images/pager/last.png') ?>" alt="<?php echo $this->__('Last') ?>" class="v-middle" />
                    </a>
                </li>            
            <?php endif;?>
        <?php endif;?>
        </ol>

    </div></div>
    <?php endif; ?>

    <?php if(true || $this->getShowPerPage()): ?>
    <div class="limiter large-4 columns">
        <label><?php echo $this->__('Show') ?></label>
        <select onchange="setLocation(this.value)">
        <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
            <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                <?php echo $_limit ?>
            </option>
        <?php endforeach; ?>
        </select> <label><?php echo $this->__('per page') ?></label>
    </div>
    <?php endif ?>

    <?php if(true || $this->getUseContainer()): ?>
    </div>
    <?php endif ?>

</div>
<?php endif ?>
