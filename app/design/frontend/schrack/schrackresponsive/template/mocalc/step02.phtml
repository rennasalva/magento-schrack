<?php
    $data = $this->getMoData();
    $step = Mage::registry(Schracklive_MoCalc_Helper_Data::REGISTRY_STEP_KEY);

    $props = $this->getPossibleProperties('rated_current');
    $pl1 = count($props) == 1;
    $current = isset($data['properties']['rated_current']['sel_value']) ? $data['properties']['rated_current']['sel_value'] : -1;
?>

    <input type="hidden" name="current_step" value="<?php echo $step; ?>"/>
    <?php foreach ( $props as $prop ) : ?>
        <input type="radio" id="<?php echo $prop['sel_value'] ?>" name="input" value="<?php echo $prop['sel_value'] ?>" <?php echo $pl1 || $current == $prop['sel_value'] ? 'checked' : '' ?>/>
        <label for="<?php echo $prop['sel_value'] ?>"><?php echo $prop['caption'] ?></label>
        <br>
    <?php endforeach; ?>

