<config>
	<modules>
		<Orcamultimedia_Sapoci>
			<version>2.1.4</version>
		</Orcamultimedia_Sapoci>
	</modules>
	<frontend>
		<routers>
			<customer>
				<args>
					<modules>
						<Orcamultimedia_Sapoci before="Mage_Customer">Orcamultimedia_Sapoci</Orcamultimedia_Sapoci>
					</modules>
				</args>
			</customer>
			<sapoci>
				<use>standard</use>
				<args>
					<module>Orcamultimedia_Sapoci</module>
					<frontName>sapoci</frontName>
				</args>
			</sapoci>
		</routers>
		<layout>
			<updates>
				<Orcamultimedia_Sapoci>
					<file>sapoci.xml</file>
				</Orcamultimedia_Sapoci>
			</updates>
		</layout>
	</frontend>
	<global>
		<blocks>
			<sapoci>
				<class>Orcamultimedia_Sapoci_Block</class>
			</sapoci>
			<checkout>
				<rewrite>
					<onepage_link>Orcamultimedia_Sapoci_Block_Link</onepage_link>
				</rewrite>
			</checkout>
		</blocks>
		<helpers>
            <sapoci>
                <class>Orcamultimedia_Sapoci_Helper</class>
            </sapoci>
        </helpers>
		<models>
			<sapoci>
				<class>Orcamultimedia_Sapoci_Model</class>
			</sapoci>
			<checkout>
				<rewrite>
					<observer>Orcamultimedia_Sapoci_Model_Checkout_Observer</observer>
				</rewrite>
			</checkout>
		</models>
		<events>
			<customer_login>
				<observers>
					<Orcamultimedia_Sapoci_Observer>
						<class>Orcamultimedia_Sapoci_Model_Observer</class>
						<method>customerLogin</method>
					</Orcamultimedia_Sapoci_Observer>
				</observers>
			</customer_login>
			<controller_action_predispatch_checkout>
				<observers>
					<Orcamultimedia_Sapoci_Observer>
						<class>Orcamultimedia_Sapoci_Model_Observer</class>
						<method>removeCheckout</method>
					</Orcamultimedia_Sapoci_Observer>
				</observers>
			</controller_action_predispatch_checkout>
			<controller_action_predispatch_customer>
				<observers>
					<Orcamultimedia_Sapoci_Observer>
						<class>Orcamultimedia_Sapoci_Model_Observer</class>
						<method>removeCustomerActions</method>
					</Orcamultimedia_Sapoci_Observer>
				</observers>
			</controller_action_predispatch_customer>
		</events>
	</global>
	<adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
										<sapoci module="sapoci" translate="title">
                                            <title>SAP OCI</title>
                                            <sort_order>50</sort_order>
                                        </sapoci>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
	<default>
		<sapoci>
			<configuration>
				<logging>0</logging>
				<transliteration>0</transliteration>
			</configuration>
			<vendor>
				<enabled>0</enabled>
				<value/>
			</vendor>
			<leadtime>
				<enabled>0</enabled>
