				<value/>
			</cust_field5>
			<ext_category_id>
				<enabled>0</enabled>
				<value/>
			</ext_category_id>
			<unit>
				<enabled>0</enabled>
				<value/>
			</unit>
			<matnr>
				<enabled>0</enabled>
