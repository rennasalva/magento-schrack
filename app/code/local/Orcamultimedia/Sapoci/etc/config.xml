			</ext_quote_id>
			<ext_quote_item>
				<enabled>0</enabled>
				<value/>
			</ext_quote_item>
			<attachment>
				<enabled>0</enabled>
				<value/>
			</attachment>
			<attachment_title>
				<enabled>0</enabled>
				<value/>
			</attachment_title>
			<attachment_purpose>
				<enabled>0</enabled>
