<?xml version="1.0"?>
<config>
	<modules>
		<Schracklive_Account>
			<version>1.5.4</version>
			<depends>
				<Schracklive_Schrack />
			</depends>
		</Schracklive_Account>
	</modules>
	<admin>
		<routers>
			<account>
				<use>admin</use>
				<args>
					<module>Schracklive_Account</module>
					<frontName>account</frontName>
				</args>
			</account>
		</routers>
	</admin>
	<frontend>
		<translate>
			<modules>
				<Schracklive_Account>
					<files>
						<account>local/Schracklive_Account.csv</account>
					</files>
				</Schracklive_Account>
			</modules>
		</translate>
		<secure_url>
			<account>/account/</account>
		</secure_url>
