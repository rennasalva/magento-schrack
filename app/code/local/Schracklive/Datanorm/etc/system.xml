<?xml version="1.0"?>
<config>
    <sections>
        <schrack translate="label" module="schrack">
            <groups>
                <datanorm translate="label">
                    <label>Datanorm</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <wsdl translate="label">
                            <label>WSDL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </wsdl>
                        <default_customer translate="label">
                            <label>Default Customer</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_customer>
                        <response_delay_secs translate="label">
                            <label>Response Delay Seconds</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </response_delay_secs>
						<typo3_information_site_id translate="label">
                            <label>Typo3 Information-Site ID</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </typo3_information_site_id>
                    </fields>
                </datanorm>
            </groups>
        </schrack>
        <schrackdev translate="label" module="schrack">
            <groups>
                <datanorm translate="label">
                    <label>Datanorm</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>12</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <log translate="label">
                            <label>Log full XML transfer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </log>
                    </fields>
                </datanorm>
            </groups>
        </schrackdev>
    </sections>
</config>
