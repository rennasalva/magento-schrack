<config>
    <api>
        <resources>
            <geoip>
                <model>geoip/api</model>
                <title>GeoIP</title>
                <acl>geoip</acl>
                <methods>
                    <getRedirectCountry translate="title" module="geoip">
                        <title>Get Redirect Country</title>
                        <method>getRedirectCountry</method>
                        <acl>geoip</acl>
                    </getRedirectCountry>
                    <getRedirectUrl translate="title" module="geoip">
                        <title>Get Redirect URL</title>
                        <method>getRedirectUrl</method>
                        <acl>geoip</acl>
                    </getRedirectUrl>
                    <hasRedirectWarning translate="title" module="geoip">
                        <title>Get Whether this country has redirect warning enabled</title>
                        <method>hasRedirectWarning</method>
                        <acl>geoip</acl>
                    </hasRedirectWarning>
                </methods>
                <faults module="geoip">
                </faults>
            </geoip>
        </resources>
        <acl>
            <resources>
                <geoip translate="title" module="geoip">
                    <title>GeoIP</title>
                    <getRedirectCountry translate="title" module="geoip">
                        <title>Get redirect country</title>
                    </getRedirectCountry>
                    <getRedirectUrl translate="title" module="geoip">
                        <title>Get redirect URL</title>
                    </getRedirectUrl>
                    <hasRedirectWarning translate="title" module="geoip">
                        <title>Get whether this country has redirect warning enabled</title>
                    </hasRedirectWarning>
                </geoip>
            </resources>
        </acl>
        <v2>
            <resources_function_prefix>
                <geoip>geoip</geoip>
            </resources_function_prefix>
      </v2>
    </api>
</config>
