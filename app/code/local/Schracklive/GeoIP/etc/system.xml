<?xml version="1.0"?>
<config>
    <sections>
        <schrack>
            <groups>
                <geoip translate="label">
                    <label>GeoIP</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <shopSwitch translate="label">
                            <label>Shop Switch Service URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </shopSwitch>
                        <redirectGeoIP translate="label">
                            <label>Redirect using GeoIP</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </redirectGeoIP>
                        <hasRedirectWarning translate="label">
                            <label>Has GeoIP redirect warning (instead of redirection)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </hasRedirectWarning>
                    </fields>
                </geoip>
            </groups>
        </schrack>
    </sections>
</config>


